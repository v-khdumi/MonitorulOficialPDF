@page
@model MonitorulOficialPDF.Web.Pages.OcrViewModel
@{
    ViewData["Title"] = "Text OCR";
}

<div class="mb-3">
    <a asp-page="/Index" class="btn btn-outline-secondary btn-sm">
        &larr; Înapoi la listă
    </a>
    @if (!string.IsNullOrEmpty(Model.Url))
    {
        <a asp-page="/ViewPdf" asp-route-url="@Model.Url" class="btn btn-sm btn-ro-blue ms-2" onclick="showSpinner()">
            Vizualizare PDF
        </a>
    }
</div>

<div class="card shadow-sm border-0 mb-4">
    <div class="card-header text-white d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2" style="background-color: var(--ro-blue);">
        <span class="fw-semibold">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-body-text me-1" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M0 .5A.5.5 0 0 1 .5 0h4a.5.5 0 0 1 0 1h-4A.5.5 0 0 1 0 .5m0 2A.5.5 0 0 1 .5 2h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5"/></svg>
            Text extras prin OCR
        </span>
        @if (!string.IsNullOrEmpty(Model.ExtractedText) && string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <form method="post" class="d-inline">
                <input type="hidden" name="url" value="@Model.Url" />
                <button type="submit" class="btn btn-sm btn-ro-red" onclick="showSpinner()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-stars me-1" viewBox="0 0 16 16"><path d="M7.657 6.247c.11-.33.576-.33.686 0l.645 1.937a2.89 2.89 0 0 0 1.829 1.828l1.936.645c.33.11.33.576 0 .686l-1.937.645a2.89 2.89 0 0 0-1.828 1.829l-.645 1.936a.361.361 0 0 1-.686 0l-.645-1.937a2.89 2.89 0 0 0-1.828-1.828l-1.937-.645a.361.361 0 0 1 0-.686l1.937-.645a2.89 2.89 0 0 0 1.828-1.829zM3.794 1.148a.217.217 0 0 1 .412 0l.387 1.162c.173.518.5.845 1.018 1.018l1.162.387a.217.217 0 0 1 0 .412l-1.162.387A1.73 1.73 0 0 0 4.593 5.53l-.387 1.162a.217.217 0 0 1-.412 0L3.407 5.53a1.73 1.73 0 0 0-1.018-1.018l-1.162-.387a.217.217 0 0 1 0-.412l1.162-.387A1.73 1.73 0 0 0 3.407 2.31zM10.863.099a.145.145 0 0 1 .274 0l.258.774c.115.346.386.617.732.732l.774.258a.145.145 0 0 1 0 .274l-.774.258a1.16 1.16 0 0 0-.732.732l-.258.774a.145.145 0 0 1-.274 0l-.258-.774a1.16 1.16 0 0 0-.732-.732L9.1 2.137a.145.145 0 0 1 0-.274l.774-.258c.346-.115.617-.386.732-.732z"/></svg>
                    Analiză AI (Azure OpenAI)
                </button>
            </form>
        }
    </div>
    <div class="card-body">
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">@Model.ErrorMessage</div>
        }
        else if (string.IsNullOrEmpty(Model.ExtractedText))
        {
            <div class="text-center py-4 text-muted">
                <p>Nu a fost extras niciun text din document.</p>
            </div>
        }
        else
        {
            <div class="bg-light rounded p-3" style="white-space: pre-wrap; font-family: 'Segoe UI', sans-serif; line-height: 1.7; max-height: 60vh; overflow-y: auto;">@Model.ExtractedText</div>
        }
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.AiAnalysis))
{
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header text-white fw-semibold" style="background-color: var(--ro-red);">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-stars me-1" viewBox="0 0 16 16"><path d="M7.657 6.247c.11-.33.576-.33.686 0l.645 1.937a2.89 2.89 0 0 0 1.829 1.828l1.936.645c.33.11.33.576 0 .686l-1.937.645a2.89 2.89 0 0 0-1.828 1.829l-.645 1.936a.361.361 0 0 1-.686 0l-.645-1.937a2.89 2.89 0 0 0-1.828-1.828l-1.937-.645a.361.361 0 0 1 0-.686l1.937-.645a2.89 2.89 0 0 0 1.828-1.829z"/></svg>
            Analiză AI
        </div>
        <div class="card-body">
            <div class="bg-light rounded p-3" style="white-space: pre-wrap; line-height: 1.7; max-height: 50vh; overflow-y: auto;">@Model.AiAnalysis</div>
        </div>
    </div>
}
